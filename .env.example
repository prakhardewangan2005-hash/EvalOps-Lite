# Application Settings
APP_NAME=EvalOps Lite
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Model Paths
MODEL_PATH=artifacts/model.pkl
PREPROCESSOR_PATH=artifacts/preprocessor.pkl
EVALUATION_RESULTS_PATH=artifacts/evaluation_results.json

# GenAI Model Configuration
GENAI_MODEL_NAME=distilbert-base-uncased
GENAI_DEVICE=cpu
GENAI_MAX_LENGTH=512
GENAI_TEMPERATURE=0.7
GENAI_TOP_P=0.9
GENAI_MOCK_MODE=True  # Set to False to use real transformer

# ML Model Configuration
ML_MODEL_TYPE=random_forest
ML_N_ESTIMATORS=100
ML_MAX_DEPTH=10

# Preprocessing Configuration
PREPROCESSING_N_FEATURES=20
PREPROCESSING_SCALING_STRATEGY=standard
PREPROCESSING_OUTLIER_THRESHOLD=3.0

# Evaluation Configuration
EVALUATION_TEST_SIZE=0.2
EVALUATION_RANDOM_STATE=42
EVALUATION_N_LATENCY_SAMPLES=100

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False
API_WORKERS=1
